---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<section class="bg-principal text-text h-dvh">
  <div class="hero container-fluid text-center">
    <div class="escena-1 flex justify-center content-center py-20">
      <canvas class="bg-slate-400" id="hero-escena"></canvas>
    </div>
    <h2 class="font-bold text-3xl">{title}</h2>
    <h3 class="text-2xl">{body}</h3>
  </div>
</section>
