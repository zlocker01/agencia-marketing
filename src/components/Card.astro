---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="flex flex-col justify-between items-center gap-1 my-3 lg:my-0 max-w-sm">
  <img class="bg-red-500 rounded-full" src="" alt="desarrollador web">
  <h3 class="font-bold">{title}</h3>
  <p>{text}</p>
</div>