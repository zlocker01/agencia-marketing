---
interface Props {
    title: string;
    body: string;
    icon: string;
}

const { title, body, icon } = Astro.props;
---

<div class="flex flex-col items-center justify-center lg:w-1/4 font-bold w-auto m-5 lg:mx-0 text-principal">
    <i class=`${icon} my-5 text-8xl`></i>
    <h3 class="text-2xl text-center ">{title}</h3>
    <p class="text-center text-text-secondary">{body}</p>
</div>