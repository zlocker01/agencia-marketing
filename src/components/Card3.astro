---
interface Props {
  icon: string;
  text: string;
}

const { text, icon } = Astro.props;
---

<div
  class="flex flex-col items-center justify-center bg-principal rounded-md mx-5 my-2 p-10 text-text lg:w-[300px] lg:h-[300px]"
>
  <i class=`${icon} mb-5 text-3xl`></i>
  <p class=" text-text text-start">{text}</p>
</div>
